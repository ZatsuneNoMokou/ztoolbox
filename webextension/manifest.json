{
	"applications": {
		"gecko": {
			"id": "ztoolbox_dev@zatsunenomokou.eu",
			"update_url": "https://gitlab.com/ZatsuneNoMokou/ztoolbox/raw/master/dist/z_toolbox_dev.update.json",
			"strict_min_version": "91.0"
		}
	},
	"manifest_version": 2,
	"name": "Z-ToolBox (Dev)",
	"short_name": "ZToolBoxDev",
	"description": "__MSG_extShortDesc__",
	"author": "Zatsune No Mokou",
	"version": "0.17.2",
	"icons": {
		"16": "/icon_16.png",
		"48": "/icon_48.png",
		"96": "/icon_96.png",
		"128": "/icon_128.png"
	},
	"background": {
		"persistent": false,
		"page": "/data/init.html"
	},
	"browser_action": {
		"browser_style": false,
		"default_icon": {
			"16": "/icon_16.png",
			"48": "/icon_48.png",
			"96": "/icon_96.png",
			"128": "/icon_128.png"
		},
		"default_popup": "/data/panel.html"
	},
	"content_scripts": [
		{
			"matches": ["*://ppa.launchpad.net/*/*/*/"],
			"js": ["/data/js/contentscripts/launchpad-addlink.js"]
		},
		{
			"matches": ["https://iqdb.org/"],
			"js": ["/data/js/contentscripts/iqdb_search.js"],
			"run_at": "document_start"
		},
		{
			"matches": [
				"https://www.amazon.fr/gp/product/*",
				"https://www.amazon.fr/dp/*",
				"https://www.amazon.fr/*/dp/*"
			],
			"js": ["/data/js/contentscripts/amazonShare.js"],
			"run_at": "document_idle"
		},
		{
			"js": [ "data/js/contentscripts/copyTextLink.js" ],
			"matches": [ "<all_urls>" ],
			"run_at": "document_idle"
		}
	],
	"default_locale": "en",
	"permissions": [
		"alarms",
		"contextMenus",
		"notifications",
		"storage",
		"tabs",
		"activeTab",
		"nativeMessaging",
		"<all_urls>",
		"http://*/*",
		"https://*/*"
	],
	"optional_permissions": [
		"clipboardWrite",
		"webRequest",
		"webRequestBlocking"
	],
	"options_ui": {
		"page": "data/options.html",
		"chrome_style": false
	},
	"minimum_chrome_version": "90.0"
}
