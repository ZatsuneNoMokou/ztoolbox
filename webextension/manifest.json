{
	"manifest_version": 3,
	"name": "Z-ToolBox (Dev)",
	"short_name": "ZToolBoxDev",
	"description": "__MSG_extShortDesc__",
	"author": "Zatsune No Mokou",
	"version": "1.0.0",
	"icons": {
		"16": "/icon_16.png",
		"48": "/icon_48.png",
		"96": "/icon_96.png",
		"128": "/icon_128.png"
	},
	"background": {
		"service_worker": "/js/index.js",
		"type": "module"
	},
	"action": {
		"browser_style": false,
		"default_icon": {
			"16": "/icon_16.png",
			"48": "/icon_48.png",
			"96": "/icon_96.png",
			"128": "/icon_128.png"
		},
		"default_popup": "/panel.html"
	},
	"content_scripts": [
		{
			"matches": [
				"*://ppa.launchpad.net/*/*/*/"
			],
			"js": [
				"/js/contentscripts/launchpad-addlink.js"
			]
		},
		{
			"matches": [
				"https://iqdb.org/"
			],
			"js": [
				"/js/contentscripts/iqdb_search.js"
			],
			"run_at": "document_start"
		}
	],
	"default_locale": "en",
	"permissions": [
		"alarms",
		"clipboardWrite",
		"contextMenus",
		"notifications",
		"scripting",
		"storage",
		"tabs",
		"activeTab",
		"nativeMessaging",
		"webRequest"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"options_ui": {
		"page": "options.html"
	},
	"minimum_chrome_version": "92.0"
}
